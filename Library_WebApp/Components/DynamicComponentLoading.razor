@code
{
    [Parameter]
    public string Role { get; set; } = null!;

    [Parameter]
    public EventCallback OnCancel { get; set; }

    protected override void OnParametersSet()
    {
        Console.WriteLine($"Dynamic Component loading Initialized with role {Role}");
    }
}

@if (Role.Equals("Student", StringComparison.OrdinalIgnoreCase))
{
    <StudentLogin OnCancel="OnCancel" />
}

else if(Role.Equals("Librarian", StringComparison.OrdinalIgnoreCase))
{
    <LibrarianLogin OnCancel="OnCancel" />
}

else if(Role.Equals("Admin", StringComparison.OrdinalIgnoreCase))
{
    <AdminLogin OnCancel="OnCancel" />
}